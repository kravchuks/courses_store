<h1>Basket</h1>

<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Count</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              {{!-- <form action="/card/remove" method="POST">
          <input type="hidden" name="id" value="{{id}}" /> --}}
              <button
                type="submit"
                class="btn btn-small js-remove"
                data-id="{{id}}"
                data-csurf="{{@root.csrf}}"
              >Remove</button>
              {{! </form> }}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p>Total price: <strong class="price">{{price}}</strong></p>

    <form action="/orders" method="post">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit" class="btn btn-primary">Order</button>
    </form>
  {{else}}
    <p>No courses found.</p>
  {{/if}}
</div>